<!DOCTYPE html>
<html>
  <head>
    <title>Steamchain</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash.present? -%>
      <p>Flash: <%= flash.to_h.inspect %></p>
    <% end -%>

    <%= yield %>
  </body>
</html>
